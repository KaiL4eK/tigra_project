<?xml version="1.0"?>
<launch>
	<!-- <include file="cameras_driver_usb.launch"> -->
	<include file="cameras_driver_uvc.launch">
		<arg name="camera_info" value="true" />
		<arg name="video_device_right" value="/dev/video1" />
		<arg name="video_device_left" value="/dev/video0" />
	</include>

	<node pkg="camera_calibration" type="cameracalibrator.py" name="cameracalibrator" 
		args="--size 8x6 --square 0.072 --no-service-check --approximate=0.01 
		right:=/stereo/right/image_raw left:=/stereo/left/image_raw 
		right_camera:=/stereo/right left_camera:=/stereo/left" 
		output="screen">
	</node>

</launch>
