<?xml version="1.0" encoding="UTF-8" ?>
<launch>
        <!-- overwriting these args -->
        <arg name="debug" default="false" />
        <arg name="gui" default="true" />
        <arg name="pause" default="false" />
        <!-- <arg name="world" default="$(find tigra_description)/worlds/lab.world" /> -->
		<arg name="world" default="$(find visual_custom_telemetry)/worlds/ETU.world" />

		<param name="robot_description" command="$(find xacro)/xacro '$(find visual_custom_telemetry)/urdf/robot.urdf.xacro'" />
    		<arg name="x" default="0"/>
    		<arg name="y" default="0"/>
    		<arg name="z" default="1.0"/>


		<node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model robot -x $(arg x) -y $(arg y) -z $(arg z)" />
		<!-- <node name="rviz" pkg="rviz" type="rviz" /> -->

        <!-- include gazebo_ros launcher -->
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
                <arg name="world_name" value="$(arg world)" />
                <arg name="debug" value="$(arg debug)" />
                <arg name="gui" value="$(arg gui)" />
                <arg name="paused" value="$(arg pause)" />
                <arg name="use_sim_time" value="true" />
        </include>

		<include file="$(find tigra_description)/launch/keyop.launch" />

<!-- GMAP -->
  		<arg name="base_frame" default="base_link"/>
		<arg name="odom_frame" default="odom"/>
		<arg name="scan_topic" default="tigra_description/laser/scan" />
  
  		<node pkg="tf" type="static_transform_publisher" name="baselink_scan" 
          args="0 0 0 0 0 0 /base_link tigra_description/laser/scan 50" />
   
  		<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"> </node>


</launch>