    <xacro:single_camera name="back_direction_right" direction="back" position="right" xyz="1 0 0" rpy="0 0 0" fov="1.3962634" />


    <xacro:single_camera name="forward_direction_left" direction="r" position="left" xyz="-1 0 0" rpy="0 0 0" fov="1.3962634" />
    <xacro:single_camera name="forward_direction_right" direction="front" position="right" xyz="1 0 0" rpy="0 0 0" fov="1.3962634" />


    <xacro:single_camera name="forward_direction_left" direction="front" position="left" xyz="-1 0 0" rpy="0 0 0" fov="1.3962634" />
    <xacro:single_camera name="forward_direction_right" direction="front" position="right" xyz="1 0 0" rpy="0 0 0" fov="1.3962634" /> -->
