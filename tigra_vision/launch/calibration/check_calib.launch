<?xml version="1.0"?>
<launch>
	<include file="$(find tigra_vision)/launch/drivers/cameras_usb.launch" />

    <group ns="stereo">
  
        <node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc" output="screen">
            <param name="approximate_sync" value="true" />
            <param name="speckle_size" value="500" />
            <param name="speckle_range" value="4" />
            <param name="min_disparity" value="-24" />
            <param name="disparity_range" value="96" />
            <param name="stereo_algorithm" value="0" />
        </node>

    </group>

    <node pkg="image_view" type="stereo_view" name="stereo_view" output="screen">
        <remap from="stereo" to="/stereo" />
        <remap from="image" to="image_rect_color" />
        <param name="approximate_sync" value="true" />
    </node>

    <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="configure" />

</launch>
